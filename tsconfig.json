{
    "compilerOptions": {
        "outDir": "./lib",
        "sourceMap": true,
        "declaration": true,

        "strictNullChecks": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,

        "experimentalDecorators": true,

        "module": "commonjs",
        "moduleResolution": "node",

        "target": "es2015"
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./src/definitions/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}